{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src",
  },
  "include": [
    "src/**/*",
    "../jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}